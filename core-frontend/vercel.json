{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://moat-smartops.onrender.com/api/:path*"
    },
    {
      "source": "/public/:path*",
      "destination": "https://moat-smartops.onrender.com/public/:path*"
    },
    {
      "source": "/auth/:path*",
      "destination": "https://moat-smartops.onrender.com/auth/:path*"
    },

      {
      "source": "/(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/files/:path*",
      "destination": "https://moat-smartops.onrender.com/files/:path*"
    },
    {
      "source": "/uploads/:path*",
      "destination": "https://moat-smartops.onrender.com/uploads/:path*"
    }
  ]
}
